@{
	
		var erro = Context.Request.Query["erro"].ToString();
	
	if (!string.IsNullOrEmpty(erro))
	{
		<div class="alert alert-danger">
			@erro
		</div>
	}
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Enviar Trabalho</title>
</head>
<body>
	<h1>Enviar Trabalho</h1>

	<form asp-action="EnviarTrabalho" method="post">
		<div class="mb-3">
			<label for="nomeAluno" class="form-label">Nome do Aluno:</label>
			<input type="text" class="form-control" id="nomeAluno" name="NomeAluno" placeholder="seu Nome" >
		</div>

		<div class="mb-3">
			<label for="titulo" class="form-label">Título:</label>
			<input type="text" class="form-control" id="titulo" name="Titulo" placeholder="Título do seu trabalho" ><br><br>
		</div>

		<div class="mb-3">
			<label for="conteudo" class="form-label">Conteúdo:</label><br>
			<textarea id="conteudo" class="form-control" name="Conteudo" rows="4" cols="50" ></textarea><br><br>
		</div>

		<label for="disciplina">Disciplina:</label>
		<select name="Disciplina" id="disciplina" class="form-select" required>
			<option value=""> Selecione a matéria</option>
			<option value="1">Matemática</option>
			<option value="2">História</option>
			<option value="3">Biologia</option>
		</select><br><br>

		<button type="submit" class="btn btn-primary btn-sm">Enviar Trabalho</button>
	</form>
	<br>
	<a class="btn btn-primary" role="button" href="/Trabalho/ListarTrabalhos">Ver Trabalhos Enviados</a>
</body>
</html>
