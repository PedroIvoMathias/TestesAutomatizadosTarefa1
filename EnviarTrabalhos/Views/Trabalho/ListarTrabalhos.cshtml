<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar Trabalhos</title>
</head>
<body>
    <a class="btn btn-primary" role="button" href="/Trabalho/EnviarTrabalho">Enviar Novo Trabalho</a><br /><br />
    <h1>Trabalhos Enviados</h1>

    <ul>
        @foreach (var trabalho in Model)
        {
            <li>
                <p><strong>ID:</strong> @trabalho.TrabalhoId</p>
                <p><strong>Aluno:</strong> @trabalho.NomeAluno</p>
                <p><strong>Título:</strong> @trabalho.Titulo</p>
            </li>
        }
    </ul>


    <form class="form-floating" action="/Trabalho/ListarPorId" method="get">

        <input class="form-control" type="text" id="id" name="id" required>
        <label for="id">Buscar Trabalho pelo ID:</label><br />
        <button class="btn btn-primary btn-sm" type="submit" id="BuscarPorId">Buscar</button>
    </form>
</body>
</html>
